<ContentControl x:Class="ToolBoxControl.Controls.DesignerItem"
                x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBoxControl.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ContentControl.Resources>
        <ControlTemplate x:Key="MoveThumbTemplate" TargetType="{x:Type local:MoveThumb}">
            <Rectangle Fill="Transparent"/>
        </ControlTemplate>
    </ContentControl.Resources>
    
    <Grid>
        <ContentPresenter Content="{Binding Path=ControlContent, RelativeSource={RelativeSource AncestorType=local:DesignerItem}}" Margin="{TemplateBinding ContentControl.Padding}" />
        <local:MoveThumb BorderBrush="AliceBlue" Cursor="SizeAll" Template="{StaticResource MoveThumbTemplate}" />
        <local:AdornerVisualisator Background="Orange" ShowItemUI="{Binding Path=IsSelected, RelativeSource={RelativeSource  AncestorType=local:DesignerItem}}" />
    </Grid>
</ContentControl>
