<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:ToolBoxControl.Controls"
             xmlns:tbc="clr-namespace:ToolBoxControl">

    <Style TargetType="{x:Type tbc:Designer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type tbc:Designer}">
                    <ScrollViewer x:Name="PART_DESIGNERSCROLLER" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ctrl:DesignerCanvas x:Name="PART_DESIGNERAREA"
                                             DesignerControl="{Binding RelativeSource={RelativeSource TemplatedParent}}" />
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
