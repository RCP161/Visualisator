<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tbc="clr-namespace:ToolBoxControl">

    <Style TargetType="{x:Type tbc:Designer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type tbc:Designer}">
                    <ScrollViewer Name="PART_DESIGNERSCROLLER" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <Canvas Name="PART_DESIGNERAREA"/>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
